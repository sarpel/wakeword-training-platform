# Auto-detect text files and normalize line endings
* text=auto

# Source code - enforce LF line endings
*.py text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.sh text eol=lf
*.toml text eol=lf
*.txt text eol=lf

# Windows scripts - enforce CRLF
*.bat text eol=crlf
*.ps1 text eol=crlf

# Binary files - mark as binary to prevent diff/merge
*.pt binary
*.pth binary
*.onnx binary
*.tflite binary
*.engine binary
*.npy binary
*.npz binary
*.pkl binary
*.pickle binary
*.h5 binary
*.hdf5 binary

# Audio files - binary
*.wav binary
*.flac binary
*.mp3 binary
*.ogg binary

# Images - binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Archives - binary
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.7z binary

# Database files - binary
*.db binary
*.sqlite binary
*.sqlite3 binary

# Git LFS tracking (if enabled)
# *.pt filter=lfs diff=lfs merge=lfs -text
# *.pth filter=lfs diff=lfs merge=lfs -text
# *.onnx filter=lfs diff=lfs merge=lfs -text

# Diff strategies for specific file types
*.ipynb diff=jupyternotebook
*.lock linguist-generated=true
